---
import "../index.css";
import App from "../App";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Corey Burns — Full-Stack Developer</title>

		<!-- Primary Meta Tags -->
		<meta name="title" content="Corey Burns — Full-Stack Developer" />
		<meta
			name="description"
			content="Corey Burns is a full-stack developer specializing in React, Node.js, and cloud-native infrastructure. Explore projects in audio-reactive visuals, news clients, and social platforms."
		/>
		<meta name="author" content="Corey Burns" />
		<meta
			name="keywords"
			content="Corey Burns, Portfolio, Full-Stack Developer, React, Node.js, GSAP, Web Development, Software Engineer"
		/>
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href="https://coreyburns.ca" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://coreyburns.ca" />
		<meta
			property="og:title"
			content="Corey Burns — Full-Stack Developer"
		/>
		<meta
			property="og:description"
			content="Corey Burns is a full-stack developer specializing in React, Node.js, and cloud-native infrastructure. Explore projects in audio-reactive visuals, news clients, and social platforms."
		/>
		<meta
			property="og:image"
			content="https://coreyburns.ca/images/photo.jpg"
		/>

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://coreyburns.ca" />
		<meta
			property="twitter:title"
			content="Corey Burns — Full-Stack Developer"
		/>
		<meta
			property="twitter:description"
			content="Corey Burns is a full-stack developer specializing in React, Node.js, and cloud-native infrastructure. Explore projects in audio-reactive visuals, news clients, and social platforms."
		/>
		<meta
			property="twitter:image"
			content="https://coreyburns.dev/images/photo.jpg"
		/>

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Corey Burns",
				"url": "https://coreyburns.ca",
				"jobTitle": "Full-Stack Developer",
				"sameAs": ["https://github.com/corey-burns-dev"],
				"description": "Full-stack developer specializing in React, Node.js, and cloud-native infrastructure."
			}
		</script>
	</head>
	<body>
		<App client:load />
	</body>
</html>
